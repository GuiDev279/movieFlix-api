{
    "openapi": "3.0.4",
    "info": {
        "title": "MovieFlix API",
        "description": "API responsavel por gerenciar os filmes",
        "version": "1.0.0"
    },
    "paths": {
        "/movies": {
            "get": {
                "tags": ["Movie"],
                "summary": "obter todos os filmes",
                "response": {
                    "200": {
                        "description": "Retorna uma lista de filmes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Movie"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Movie": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "description": "ID do filme"
                    },
                    "title": {
                        "type": "string",
                        "description": "Título do filme"
                    },
                    "genre_id": {
                        "type": "string",
                        "description": "Gênero do filme"
                    },

                    "genres": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type":"integer",
                                "description": "ID do genero"
                            },
                            "name": {
                                "type":"string",
                                "description": "nome do genero"
                            }
                        }
                    },

                    "language_id": {
                        "type": "string",
                        "description": "Idioma do filme"
                    },

                    "languages": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type":"integer",
                                "description": "ID da lingua"
                            },
                            "name": {
                                "type":"string",
                                "description": "nome da lingua"
                            }
                        }
                    },

                    "oscar_count": {
                        "type": "integer",
                        "description": "Quantidade de Oscars ganhos pelo filme"
                    },
                    "release_date": {
                        "type": "string",
                        "format": "date",
                        "description": "Data de lançamento do filme"
                    }
                }
            }
        }
    }
}